<?xml version="1.0"?>
<ruleset name="Code Size Rules">
    <description>Rules for detecting code size and complexity issues</description>

    <!-- Excessive Method Length -->
    <rule ref="rulesets/codesize.xml/ExcessiveMethodLength">
        <properties>
            <property name="maxmethodlength" value="50"/>
        </properties>
    </rule>

    <!-- Excessive Class Length -->
    <rule ref="rulesets/codesize.xml/ExcessiveClassLength">
        <properties>
            <property name="maxclasslength" value="500"/>
        </properties>
    </rule>

    <!-- Excessive Parameter List -->
    <rule ref="rulesets/codesize.xml/ExcessiveParameterList">
        <properties>
            <property name="maxparameters" value="5"/>
        </properties>
    </rule>

    <!-- Excessive Method Complexity -->
    <rule ref="rulesets/codesize.xml/ExcessiveMethodComplexity">
        <properties>
            <property name="maxmethodcomplexity" value="10"/>
        </properties>
    </rule>

    <!-- Excessive Code Complexity -->
    <rule ref="rulesets/codesize.xml/ExcessiveCodeComplexity">
        <properties>
            <property name="maxfilecomplexity" value="20"/>
        </properties>
    </rule>

    <!-- Excessive Nesting Depth -->
    <rule ref="rulesets/codesize.xml/ExcessiveNestingDepth">
        <properties>
            <property name="maxnestingdepth" value="5"/>
        </properties>
    </rule>

    <!-- Excessive Class Complexity -->
    <rule ref="rulesets/codesize.xml/ExcessiveClassComplexity">
        <properties>
            <property name="maxclasscomplexity" value="30"/>
        </properties>
    </rule>
</ruleset>

